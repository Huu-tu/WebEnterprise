<div style="margin-left: 300px;">
    <h3 style="color: rgb(221, 135, 135); font-weight: normal; font-size: 50px;margin-bottom: 20px; margin-left:530px">Set Deadline For Comment</h3>

    {{#if error}}
        <p class="danger">{{message}}</p>
    {{/if}}

    <form method="POST" action="/task/storeTask" style="margin-left: 530px;">
        <div class="form-group">
            <label for="name" style="font-size: 20px; font-weight: bold;color:rgb(24, 147, 218)">Title</label>
            <input style="border: 1px solid black; width: 500px;" type="text" class="form-control" id="title" name="title">
        </div>

        <div class="form-group">
            <label for="startDay" style="font-size: 20px;font-weight: bold;color:rgb(24, 147, 218)">Start Day</label>
            <input style="border: 1px solid black; width: 500px;" type="date" class="form-control" id="startDay" name="startDay">
        </div>

        <div class="form-group">
            <label for="startTime" style="font-size: 20px;font-weight: bold;color:rgb(24, 147, 218)">Start Time</label>
            <input style="border: 1px solid black; width: 500px;" type="time" class="form-control" id="startTime" name="startTime">
        </div>
        <div class="form-group">
            <label for="endDay" style="font-size: 20px;font-weight: bold;color:rgb(24, 147, 218)">End Day</label>
            <input style="border: 1px solid black; width: 500px;" type="date" class="form-control" id="endDay" name="endDay">
        </div>
        <div class="form-group">
            <label for="endTime" style="font-size: 20px;font-weight: bold;color:rgb(24, 147, 218)">End Time</label>
            <input style="border: 1px solid black; width: 500px;" type="time" class="form-control" id="endTime" name="endTime">
        </div>
        <div class="form-group">
            <label for="description" style="font-size: 20px;font-weight: bold;color:rgb(24, 147, 218)">Description</label>
            <input style="border: 1px solid black; width: 500px;" type="text" class="form-control" id="description" name="description">
        </div>

        <div class="form-group">
            <label for="complete" style="font-size: 20px;font-weight: bold;color:rgb(24, 147, 218)">Complete</label>
            <input style="border: 1px solid black; width: 500px;" type="text" class="form-control" id="complete" name="complete">
        </div>

        <hr>
        <button type="submit" class="btn btn-primary" style="margin-left: 200px;">Set Deadline</button>
    </form>
</div>
