              url:'/auth/register',
              method:'POST',
              data:{
                  username: $('#username').val(),
                  password: $('#password').val(),
                  fullName: $('#fullName').val(),
                  phone: $('#phone').val(),
                  email: $('#email').val(),
                  gender: $('#gender').val(),
                  role: $('#role').val(),
              },
              success:function (){
                  alert('You was registered successfully');
                  location.assign('/');
              },
              error: function (){
                alert('Access failure');
              }
          });
        }

</script>



